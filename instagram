            tech: ['#TechNews', '#GadgetLover', '#FutureTech', '#AIRevolution', '#SmartHome',
                  '#CyberSecurity', '#CodingLife', '#TechInnovation', '#DigitalTransformation', '#TechWorld'],
            parenting: ['#MomLife', '#DadJokes', '#ParentingWin', '#ToddlerLife', '#FamilyFirst',
